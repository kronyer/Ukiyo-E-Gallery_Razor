@page
@using Microsoft.AspNetCore.Html
@model Ukiyo_e_Gallery.Pages.User.DetailsModel
@{
}
<div class="container align-content-center align-self-center justify-content-center text-center">
    <div class="row align-content-center align-self-center justify-content-center text-start">
        <div class="col-8">
            <h2>@Model.Ukiyoe.Name</h2>
            <hr />
            <img class="img-fluid d-block mx-auto mb-3" src="@Model.Ukiyoe.Image" alt="ukiyoe image">
            @{
                string changedText = Model.Ukiyoe.Description.Replace(Environment.NewLine, "<br>");
                HtmlString text = new HtmlString(changedText);
            }
            <p>@text</p>
            <p class="text-start">@Html.Raw(Model.Ukiyoe.Description)</p>
        </div>
    </div>
</div>